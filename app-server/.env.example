# Database Configuration
# SQLite database file path (relative to app-server directory)
DATABASE_URL="file:./prisma/pos.db"

# JWT Authentication
# Secret key for JWT token generation and verification
# IMPORTANT: Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-this-in-production"

# Server Configuration
PORT=3001

# Node Environment
# Options: development, production, test
NODE_ENV="development"

# CORS Configuration (optional)
# Comma-separated list of allowed origins
# CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Database Pool Configuration (optional)
# DB_POOL_MIN=2
# DB_POOL_MAX=10
